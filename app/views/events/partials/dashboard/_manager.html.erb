            <% end %>
          </div>
        </td>
        <td class="icon">
          <div class="cell">
            <a
            data-confirm="Confirma que deseas eliminar el acceso directo"
            rel="nofollow"
            data-method="delete"
            href="/single_accesses/<%= single_access.id %>">
              <i class="material-icons">close</i>
            </a>
          </div>
        </td>
      </tr>
    <% end %>
    <tr>
      <th>Acceso MÃºltiple</th>
      <th>
        <%= link_to(model: "multiple_access",ticket_type: ticket_type.id) do %>
          <i class="material-icons link">add</i>
        <% end %>
      </th>
    </tr>
    <% ticket_type.multiple_accesses.each do |multiple_access| %>
      <tr>
          <td><div class="cell"><%= multiple_access.activity_type.name %></div></td>
          <td><div class="cell"><%= multiple_access.amount%></div></td>
          <td><div class="cell"></div></td>
          <td><div class="cell"></div></td>
          <td><div class="cell"></div></td>
          <td><div class="cell"></div></td>
          <td class="icon"><div class="cell">
            <%= link_to(model: "multiple_access", multiple_access: multiple_access.id) do %>
              <i class="material-icons">settings</i>
            <% end %>
          </div></td>
          <td class="icon">
            <div class="cell">
              <a
              data-confirm="Confirma que deseas eliminar el acceso multiple"
              rel="nofollow"
              data-method="delete"
              href="/multiple_accesses/<%= multiple_access.id %>">
                <i class="material-icons">close</i>
              </a>
            </div>
        </td>
      </tr>
    <% end %>
    <tr>
      <th>Preguntas</th>
      <th>
        <%= link_to(model: "question",ticket_type: ticket_type.id) do %>
          <i class="material-icons link">add</i>
        <% end %>
      </th>
    </tr>
    <% ticket_type.questions.each do |question| %>
      <tr>
        <td><div class="cell"><%= question.sentence%></div></td>
        <td><div class="cell"></div></td>
        <td><div class="cell"></div></td>
        <td><div class="cell"></div></td>
        <td><div class="cell"></div></td>
        <td><div class="cell"></div></td>
        <td class="icon"><div class="cell">
          <%= link_to(model: "question", question: question.id) do %>
            <i class="material-icons">settings</i>
          <% end %>
        </div></td>
        <td class="icon">
          <div class="cell">
            <a
            data-confirm="Confirma que deseas eliminar la pregunta"
            rel="nofollow"
            data-method="delete"
            href="/questions/<%= question.id %>">
              <i class="material-icons">close</i>
            </a>
          </div>
        </td>
      </tr>
    <%end%>
  <%end%>
  </table>
  <%= link_to "Crear Tipo de Boleto", {model: "ticket_type"}, class: "button"%>
  </div>
</div>
